#!/bin/sh /etc/rc.common

USE_PROCD=1

start_service() {
    procd_open_instance
    procd_set_param command /usr/bin/mqtt_subscriber
    procd_set_param pidfile /var/run/mqtt_subscriber.pid
    procd_close_instance
}

service_triggers() {
    procd_add_reload_trigger mqtt_subscriber
}

reload_service() {
    stop
    start
}